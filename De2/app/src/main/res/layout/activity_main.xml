<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#CCCCCC">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐỀ THI THỰC HÀNH SỐ 2"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#EEEEEE">
       <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:layout_marginTop="10dp">
           <TableRow>
               <Button
                       android:id="@+id/btnThongBao"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:text="Thông Báo"
                       android:background="#33FFFF"
                       android:textColor="#0033FF"
                       android:textStyle="bold"
                   />
               <TextView
                       android:layout_weight="1"
                       />
               <Button
                       android:id="@+id/btnTinhDiem"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:text="Tính điểm"
                       android:background="#FF99FF"
                       android:textColor="#0033FF"
                       android:textStyle="bold"
                       />
           </TableRow>
           <TableRow android:layout_marginTop="10dp">
               <CheckBox
                       android:id="@+id/chkChucNang"
                       android:text="CHỌN CHỨC NĂNG"
                       android:textColor="#0033FF"

                       />
               <TextView
                       android:layout_weight="1"
                       />
               <Button
                       android:id="@+id/btnThoat"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:text="THOÁT"
                       android:textColor="#0033FF"
                       android:background="#DDDDDD"
                       android:textStyle="bold"
                       />
           </TableRow>
       </TableLayout>
    </LinearLayout>
   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="5dp">
       <TextView
               android:id="@+id/txt1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="THI MÔN LẬP TRÌNH CHO THIẾT BỊ DI ĐỘNG"
               android:textColor="#FF0000"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="16dp"
               />
       <TextView
               android:id="@+id/txt2"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Lịch thi: Từ (giờ thi), ngày (ngày thi), phòng thi (phòng thi)"
               android:textColor="#0C2FEC"
               android:textStyle="bold"
               />
       <TextView
               android:id="@+id/txt3"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Lưu ý: - Sinh viên phải mang bản tên khi vào phòng thi và tắt điện thoại đi động. - Được sủ dụng tài liệu giây. - Không được truy câp mạng hoặc dùng USB. -Không được thảo luận."
               android:textColor="#0C2FEC"
               android:textStyle="bold"
               />
   </LinearLayout>

    

</androidx.appcompat.widget.LinearLayoutCompat>